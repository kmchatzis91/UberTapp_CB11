@model UberTappDeveloping.ViewModels.VenueFormViewModel
@{
    ViewBag.Title = "VenueForm";
}

@*<style></style>*@
<link href="~/Content/KotsDisplay.css" rel="stylesheet" />
@*<style></style>*@

<body id="VenueFormView" class="body">
    <div class="container-fluid">

        @if (Model.Venue.Id == 0)
        {
            <div id="TitleContainer" class="row">
                <div class="form-group col-md-6">
                    <img id="VenueSignImg" src="~/Helper/Images/8.png" alt="Alternate Text" />
                    <img id="AddNewVenueImg" src="~/Helper/Images/Add_a_new_Venue.png" alt="Alternate Text" />
                    <img id="VenueSignImg" src="~/Helper/Images/8.png" alt="Alternate Text" />
                </div>
            </div>
        }
        else
        {
            <div id="TitleContainer" class="row">
                <div class="form-group col-md-6">
                    <img id="VenueSignImg" src="~/Helper/Images/8.png" alt="Alternate Text" />
                    <img id="EditVenueImg" src="~/Helper/Images/edit_venue.png" alt="Alternate Text" />
                    <img id="VenueSignImg" src="~/Helper/Images/8.png" alt="Alternate Text" />
                </div>
            </div>
        }

        <div class="row">
            <div class="form-group col-md-6">
                @using (Html.BeginForm(Model.ActionName, "Venue"))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(v => v.Venue.Id)
                    <div class="form-group">
                        @Html.LabelFor(v => v.Venue.Name)
                        @Html.TextBoxFor(v => v.Venue.Name, new { @class = "form-control", autofocus = true })
                        @Html.ValidationMessageFor(v => v.Venue.Name)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(v => v.Venue.Manager)
                        @Html.TextBoxFor(v => v.Venue.Manager, new { @class = "form-control", @Value = Model.ManagerName })
                        @Html.ValidationMessageFor(v => v.Venue.Manager)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(v => v.Venue.DateOpened)
                        @Html.TextBoxFor(v => v.Venue.DateOpened, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(v => v.Venue.LocationId)
                        @Html.DropDownListFor(v => v.Venue.LocationId, new SelectList(Model.Locations, "Id", "Display"), " --- Select --- ", new { @class = "form-control" })
                        @Html.ValidationMessageFor(v => v.Venue.LocationId)
                    </div>

                    <div id="SaveVenueBtn" class="form-group">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                }
            </div>
            <div class="form-group col-md-6">
                <img id="VenuesTranspImg" src="~/Helper/Images/venues_transp.png" alt="Alternate Text" />
            </div>
        </div>
    </div>
</body>
